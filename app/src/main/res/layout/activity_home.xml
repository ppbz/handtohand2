<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activity.HomeActivity">

    <FrameLayout
            android:id="@+id/act_home_viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="100sp"
            android:gravity="center"
            android:layout_weight="1">
    </FrameLayout>
    <!--<androidx.appcompat.view.menu.ActionMenuItemView
            android:id="@+id/act_home_viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="100sp"
            android:gravity="center"
            android:layout_weight="1">
    </androidx.appcompat.view.menu.ActionMenuItemView>-->

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EBEBEB" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

        <LinearLayout
                android:id="@+id/act_home_homepageLinearLayout"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/act_home_homepageImageView"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/home_homepage_sel"/>

            <TextView
                    android:id="@+id/act_home_homepageTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="首页"/>

        </LinearLayout>


        <LinearLayout
                android:id="@+id/act_home_orderLinearLayout"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/act_home_orderImageView"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/home_homepage_sel" />

            <TextView
                    android:id="@+id/act_home_orderTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单" />

        </LinearLayout>

        <LinearLayout
                android:id="@+id/act_home_sendLinearLayout"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/act_home_sendImageView"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/home_homepage_sel" />

            <TextView
                    android:id="@+id/act_home_sendTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="派送" />

        </LinearLayout>

        <LinearLayout
                android:id="@+id/act_home_mineLinearLayout"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/act_home_mineImageView"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/home_mine_nor" />

            <TextView
                    android:id="@+id/act_home_mineTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>